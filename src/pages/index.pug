extends ../templates/template__default.pug

block variables
  - isMainPage = false
  - pageTitle = "Start page"
  - metaDescription = "description"
  - metaKeywords = "keywords"

block content
  .container

    .seats
      .seats__inner.js-seats-container(style="transform: matrix(1, 0, 0, 1, 0, 0)")
        .seats__sector.js-sector
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000">
              <rect id="stage" x="450" y="850" width="100" height="100" fill="gray"/>
              <g id="rows">
                <g id="row1" class="row">
                  <rect x="50" y="50" width="80" height="40" fill="green" class="place"/>
                  <rect x="150" y="50" width="80" height="40" fill="green" class="place"/>
                  <rect x="250" y="50" width="80" height="40" fill="green" class="place"/>
                  <rect x="350" y="50" width="80" height="40" fill="green" class="place"/>
                  <rect x="450" y="50" width="80" height="40" fill="green" class="place"/>
                </g>
                <g id="row2" class="row">
                  <rect x="50" y="150" width="80" height="40" fill="green" class="place"/>
                  <rect x="150" y="150" width="80" height="40" fill="green" class="place"/>
                  <rect x="250" y="150" width="80" height="40" fill="green" class="place"/>
                  <rect x="350" y="150" width="80" height="40" fill="green" class="place"/>
                  <rect x="450" y="150" width="80" height="40" fill="green" class="place"/>
                </g>
              </g>
            </svg>


    .seats__controls
      button.js-plus-button +
      button.js-minus-button -
